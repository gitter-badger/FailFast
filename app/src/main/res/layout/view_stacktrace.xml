<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f00"
    android:orientation="vertical"
    android:padding="8dp">

    <ImageView
        android:id="@+id/view_stacktrace_gripview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:src="@drawable/img_grip" />

    <TextView
        android:id="@+id/view_stacktrace_titletv"
        style="@style/TextViewStyle.Header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_stacktrace_gripview"
        android:gravity="center_horizontal"
        android:paddingTop="8dp"
        android:text="@string/nullpointerexception"
        android:textColor="#fff"
        android:textStyle="bold" />


    <TextView
        android:id="@+id/view_stacktrace_stacktracetv"
        style="@style/TextViewStyle.Code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/view_stacktrace_titletv"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        android:textStyle="bold" />

</RelativeLayout>